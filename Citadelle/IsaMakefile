## targets
EXAMPLE = FeatherweightOCL

ifeq (,$(filter HOL-TestGen,$(shell $(ISABELLE_TOOL) findlogics)))
  MAIN=HOL
else
  MAIN=HOL-TestGen
endif

default: $(EXAMPLE)

## global settings:

SRC = $(ISABELLE_HOME)/src
OUT = $(ISABELLE_OUTPUT)
LOG = $(OUT)/log

USEDIR = $(ISABELLE_TOOL) usedir -q 0 -t true -b -v true -i false -d pdf

export LOG OUT
## IMP

$(EXAMPLE): *.thy ROOT.ML $(LOG)/$(MAIN)-$(EXAMPLE).gz 

$(LOG)/$(MAIN)-$(EXAMPLE).gz: ROOT.ML *.thy
	@$(USEDIR) $(MAIN) $(MAIN)-$(EXAMPLE) 


## clean

clean:
	@rm -f $(LOG)/$(MAIN)-$(EXAMPLE).gz

